@model IEnumerable<MVC_Database.Models.KnihovnaModel>

@{
    ViewBag.Title = "Půjčit knihu";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazev)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Autor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nazev)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Autor)
        </td>
        <td>
            @Html.ActionLink("Půjčit", "PujcitKnihuZakovi", new { idKnihy = item.Id, idZaka = ViewBag.IdZaka })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Zpět", "Index", "Zaci", null, null)
</p>
